{{! Stats Tab }}
<section class='tab stats {{tab.cssClass}}' data-group='primary' data-tab='stats'>
<fieldset>
  <legend>{{localize systemFields.characteristics.label}}</legend>
  <div class="flexrow">
    {{#each system.characteristics as |chr key|}}
      <label class="flexcol">
        <a data-action="roll" data-roll-type="characteristic">
          {{localize (concat "DRAW_STEEL.Actor.base.FIELDS.characteristics." key ".value.label")}}
        </a>
        <input type="text" data-dtype="Number" name="system.characteristics.{{key}}.value" value={{numberFormat chr.value sign=true}}>
      </label>
    {{/each}}
  </div>
</fieldset>
<fieldset>
  <legend>{{localize systemFields.stats.label}}</legend>
  {{formGroup systemFields.stats.fields.size value=system.stats.size}}
  {{formGroup systemFields.stats.fields.weight value=system.stats.weight}}
  {{formGroup systemFields.stats.fields.reach value=system.stats.reach}}
  {{formGroup systemFields.stats.fields.stability value=system.stats.stability}}
</fieldset>
</section>
